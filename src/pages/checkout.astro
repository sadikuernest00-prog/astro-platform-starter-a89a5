---
const btcAddress = "bc1qq8c7h3rx4klumyphkjmpek5c66em7ydghmr2ge";

// Generate BTC QR online
const btcQrUrl = `https://api.qrserver.com/v1/create-qr-code/?size=250x250&data=${encodeURIComponent(
  btcAddress
)}`;

// Vipps QR image (must exist in /public/images)
const vippsQrUrl = "/images/vipps-qr.jpg";
---

<h1>Checkout</h1>

<main>
  <form action="https://formspree.io/f/xzznjkvd" method="POST" class="card">
    <!-- LEFT SIDE: SHIPPING FORM -->
    <section>
      <h2>Shipping details</h2>
      <p class="small">
        Fill out where the item should be sent. Make sure everything is correct
        before you pay.
      </p>

      <div>
        <label for="fullName">Full name</label>
        <input id="fullName" name="fullName" required />
      </div>

      <div>
        <label for="email">Email (for updates)</label>
        <input id="email" type="email" name="email" required />
      </div>

      <div>
        <label for="phone">Phone number</label>
        <input
          id="phone"
          name="phone"
          type="tel"
          placeholder="+47 123 45 678"
          required
        />
      </div>

      <div>
        <label for="address1">Address line</label>
        <input id="address1" name="address1" required />
      </div>

      <div class="row">
        <div>
          <label for="postalCode">Postal code</label>
          <input id="postalCode" name="postalCode" required />
        </div>

        <div>
          <label for="city">City</label>
          <input id="city" name="city" required />
        </div>
      </div>

      <div>
        <label for="country">Country</label>
        <input id="country" name="country" required />
      </div>

      <div>
        <label for="notes">Order notes (optional)</label>
        <textarea
          id="notes"
          name="notes"
          placeholder="Size, color, extra details…"
        ></textarea>
      </div>

      <!-- PAYMENT METHOD -->
      <div>
        <label class="label">Payment method</label>
        <div class="pay-methods">
          <label class="pay-option">
            <input
              type="radio"
              name="paymentMethod"
              value="bitcoin"
              checked
              data-show="btc"
            />
            Bitcoin
          </label>

          <label class="pay-option">
            <input type="radio" name="paymentMethod" value="vipps" data-show="vipps" />
            Vipps
          </label>
        </div>
      </div>

      <!-- Hidden cart data -->
      <textarea id="orderData" name="orderData" hidden></textarea>

      <button type="submit" class="btn">I have sent the payment →</button>

      <p class="small">
        After you send the payment and submit this form, we will verify the
        transaction and ship your order to the address above.
      </p>
    </section>

    <!-- RIGHT SIDE: ORDER + PAYMENT DISPLAY -->
    <section class="pay-card">
      <h2>Your Order</h2>
      <div id="orderList"></div>
      <p class="small" id="orderTotal"></p>

      <hr style="border-color:#1f2937; margin:1.5rem 0;" />

      <h2>Payment</h2>

      <!-- BITCOIN -->
      <div id="btcPayment" class="pay-block">
        <h3 class="pay-title">Pay with Bitcoin</h3>
        <div class="qr-wrapper">
          <img src={btcQrUrl} width="250" height="250" loading="lazy" />
        </div>

        <p class="small">BTC address</p>

        <p class="btc-address">{btcAddress}</p>

        <p class="small">
          Make sure you are sending on the correct network (Bitcoin mainnet).
          Transactions must confirm before shipping.
        </p>
      </div>

      <!-- VIPPS -->
      <div id="vippsPayment" class="pay-block" style="display:none;">
        <h3 class="pay-title">Pay with Vipps</h3>

        <div class="qr-wrapper">
          <img
            src={vippsQrUrl}
            alt="Vipps QR"
            width="250"
            height="250"
            loading="lazy"
          />
        </div>

        <p class="small">
          Open Vipps → tap Scan → point at this code to pay.
        </p>
      </div>
    </section>
  </form>
</main>

<script>
  const CART_KEY = "amicbridge_cart_v1";

  function readCart() {
    try {
      return JSON.parse(localStorage.getItem(CART_KEY) || "[]");
    } catch {
      return [];
    }
  }

  function writeCart(cart) {
    localStorage.setItem(CART_KEY, JSON.stringify(cart));
    updateCartCount();
  }

  function updateCartCount() {
    const el = document.getElementById("cartCount");
    if (!el) return;

    const cart = readCart();
    const count = cart.reduce((sum, i) => sum + (Number(i.qty) || 0), 0);
    el.textContent = String(count);
  }

  function renderCart() {
    const cart = readCart();
    const box = document.getElementById("orderList");
    const totalEl = document.getElementById("orderTotal");
    const orderDataField = document.getElementById("orderData");

    if (!box) return;

    if (!cart.length) {
      box.innerHTML = "<p>No items in cart.</p>";
      totalEl.textContent = "";
      orderDataField.value = "Cart is empty";
      updateCartCount();
      return;
    }

    let total = 0;
    let lines = [];

    box.innerHTML = cart
      .map((item, index) => {
        const lineTotal = item.price * item.qty;
        total += lineTotal;

        const lineText = `${item.name} | Size: ${item.size} | Color: ${
          item.color
        } | Qty: ${item.qty} | Line total: ${lineTotal} NOK`;
        lines.push(lineText);

        return `
        <div class="order-item">
          <div class="order-item-main">
            <div>
              <strong>${item.name}</strong><br>
              Size: ${item.size} | Color: ${item.color}<br>
              Qty: ${item.qty} — ${lineTotal} NOK
            </div>
            <button class="remove-order-btn" data-index="${index}">
              Remove
            </button>
          </div>
        </div>
      `;
      })
      .join("");

    totalEl.textContent = "Total: " + total + " NOK";
    orderDataField.value = lines.join("\n") + "\nTOTAL: " + total + " NOK";

    document.querySelectorAll(".remove-order-btn").forEach((btn) => {
      btn.addEventListener("click", () => {
        const idx = Number(btn.dataset.index);
        let cart = readCart();

        cart.splice(idx, 1);
        writeCart(cart);
        renderCart();
      });
    });

    updateCartCount();
  }

  function setupPaymentToggle() {
    const radios = document.querySelectorAll('input[name="paymentMethod"]');
    const btcBlock = document.getElementById("btcPayment");
    const vippsBlock = document.getElementById("vippsPayment");

    radios.forEach((r) => {
      r.addEventListener("change", () => {
        if (r.dataset.show === "btc") {
          btcBlock.style.display = "block";
          vippsBlock.style.display = "none";
        } else {
          btcBlock.style.display = "none";
          vippsBlock.style.display = "block";
        }
      });
    });
  }

  renderCart();
  setupPaymentToggle();
</script>

<style>
  :global(body) {
    background: #0f172a;
    color: #e5e7eb;
    display: flex;
    justify-content: center;
  }

  main {
    max-width: 900px;
    width: 100%;
    padding: 2rem 1.5rem 3rem;
  }

  .card {
    background: #020617;
    border-radius: 1rem;
    padding: 2rem;
    display: grid;
    grid-template-columns: 3fr 2fr;
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .card {
      grid-template-columns: 1fr;
    }
  }

  input,
  textarea {
    width: 100%;
    border-radius: 0.6rem;
    border: 1px solid #1f2937;
    background: #020617;
    color: white;
    padding: 0.6rem;
  }

  .btn {
    margin-top: 0.75rem;
    width: 100%;
    border-radius: 999px;
    border: none;
    padding: 0.8rem 1rem;
    font-weight: 600;
    cursor: pointer;
    background: linear-gradient(90deg, #22c55e, #0ea5e9);
  }

  .pay-card {
    border: 1px solid #1f2937;
    border-radius: 1rem;
    padding: 1.5rem;
  }

  .qr-wrapper {
    display: flex;
    justify-content: center;
  }

  .btc-address {
    font-family: monospace;
    font-size: 0.8rem;
    padding: 0.6rem;
    border-radius: 0.5rem;
    border: 1px solid #1f2937;
    word-break: break-all;
  }

  .remove-order-btn {
    border-radius: 999px;
    border: 1px solid red;
    background: transparent;
    color: #ff9c9c;
    padding: 6px 12px;
  }

  .pay-methods {
    display: flex;
    gap: 12px;
  }
</style>
