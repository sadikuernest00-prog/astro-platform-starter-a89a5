---
const btcAddress = "bc1qq8c7h3rx4klumyphkjmpek5c66em7ydghmr2ge";

// Bitcoin QR is generated via external API (no local file needed)
const btcQrUrl = `https://api.qrserver.com/v1/create-qr-code/?size=250x250&data=${encodeURIComponent(
  btcAddress
)}`;

// Vipps QR must be saved as public/vipps-qr.png in your repo
const vippsQrUrl = "/vipps-qr.png";
---

<h1>Checkout</h1>

<main>
  <form
    action="https://formspree.io/f/xzznjkvd"
    method="POST"
    class="card"
  >
    <!-- LEFT: SHIPPING INFO -->
    <section>
      <h2>Shipping details</h2>
      <p class="small">
        Fill out where the item should be sent. Make sure everything is correct before you pay.
      </p>

      <div>
        <label for="fullName">Full name</label>
        <input id="fullName" name="fullName" required />
      </div>

      <div>
        <label for="email">Email (for updates)</label>
        <input id="email" type="email" name="email" required />
      </div>

      <div>
        <label for="phone">Phone number</label>
        <input
          id="phone"
          name="phone"
          type="tel"
          placeholder="+47 123 45 678"
          required
        />
      </div>

      <div>
        <label for="address1">Address line</label>
        <input id="address1" name="address1" required />
      </div>

      <div class="row">
        <div>
          <label for="postalCode">Postal code</label>
          <input id="postalCode" name="postalCode" required />
        </div>
        <div>
          <label for="city">City</label>
          <input id="city" name="city" required />
        </div>
      </div>

      <div>
        <label for="country">Country</label>
        <input id="country" name="country" required />
      </div>

      <div>
        <label for="notes">Order notes (optional)</label>
        <textarea
          id="notes"
          name="notes"
          placeholder="Size, color, extra details…"
        ></textarea>
      </div>

      <!-- Payment method (sent to Formspree) -->
      <div>
        <label class="label">Payment method</label>
        <div class="pay-methods">
          <label class="pay-option">
            <input
              type="radio"
              name="paymentMethod"
              value="bitcoin"
              checked
              data-show="btc"
            />
            Bitcoin
          </label>
          <label class="pay-option">
            <input
              type="radio"
              name="paymentMethod"
              value="vipps"
              data-show="vipps"
            />
            Vipps
          </label>
        </div>
      </div>

      <!-- hidden field sent to Formspree containing cart info -->
      <textarea id="orderData" name="orderData" hidden></textarea>

      <button type="submit" class="btn">
        I have sent the payment &rarr;
      </button>

      <p class="small">
        After you send the payment and submit this form, we will verify the
        transaction and ship your order to the address above.
      </p>
    </section>

    <!-- RIGHT: ORDER + PAYMENT -->
    <section class="pay-card">
      <h2>Your Order</h2>
      <div id="orderList"></div>
      <p class="small" id="orderTotal"></p>

      <hr style="border-color:#1f2937; margin:1.5rem 0;" />

      <h2>Payment</h2>
      <p class="small">
        Choose your preferred method and scan the QR code with your app to send the payment.
      </p>

      <!-- Bitcoin block -->
      <div id="btcPayment" class="pay-block">
        <h3 class="pay-title">Pay with Bitcoin</h3>
        <div class="qr-wrapper">
          <img
            src={btcQrUrl}
            alt="Bitcoin payment QR code"
            width="250"
            height="250"
            loading="lazy"
          />
        </div>
        <p class="small">BTC address</p>
        <p class="btc-address">{btcAddress}</p>
        <p class="small">
          Make sure you are sending on the correct network (Bitcoin mainnet).
          Transactions must be confirmed on-chain before shipping.
        </p>
      </div>

      <!-- Vipps block -->
      <div id="vippsPayment" class="pay-block" style="display:none;">
        <h3 class="pay-title">Pay with Vipps</h3>
        <div class="qr-wrapper">
          <img
            src={vippsQrUrl}
            alt="Vipps payment QR code"
            width="250"
            height="250"
            loading="lazy"
          />
        </div>
        <p class="small">
          Open Vipps, choose “Scan”, and scan this QR code to pay.
        </p>
      </div>
    </section>
  </form>
</main>

<script>
  const CART_KEY = "amicbridge_cart_v1";

  function readCart() {
    try { return JSON.parse(localStorage.getItem(CART_KEY) || "[]"); }
    catch { return []; }
  }

  function writeCart(cart) {
    localStorage.setItem(CART_KEY, JSON.stringify(cart));
    updateCartCount();
  }

  function updateCartCount() {
    const el = document.getElementById("cartCount");
    if (!el) return;
    const cart = readCart();
    const count = cart.reduce((sum, i) => sum + (Number(i.qty) || 0), 0);
    el.textContent = String(count);
  }

  function renderCart() {
    const cart = readCart();
    const box = document.getElementById("orderList");
    const totalEl = document.getElementById("orderTotal");
    const orderDataField = document.getElementById("orderData");

    if (!box || !totalEl || !orderDataField) return;

    if (!cart.length) {
      box.innerHTML = "<p>No items in cart.</p>";
      totalEl.textContent = "";
      orderDataField.value = "Cart is empty";
      updateCartCount();
      return;
    }

    let total = 0;
    let lines = [];

    box.innerHTML = cart
      .map((item, index) => {
        const lineTotal = item.price * item.qty;
        total += lineTotal;

        const lineText =
          `${item.name} | Size: ${item.size} | Color: ${item.color} | ` +
          `Qty: ${item.qty} | Line total: ${lineTotal} NOK`;
        lines.push(lineText);

        return `
          <div class="order-item" data-index="${index}">
            <div class="order-item-main">
              <div>
                <strong>${item.name}</strong><br>
                Size: ${item.size} | Color: ${item.color} <br>
                Qty: ${item.qty} — ${lineTotal} NOK
              </div>
              <button type="button" class="remove-order-btn" data-index="${index}">
                Remove
              </button>
            </div>
          </div>`;
      })
      .join("");

    totalEl.textContent = "Total: " + total + " NOK";
    orderDataField.value = lines.join("\n") + "\nTOTAL: " + total + " NOK";

    // hook up remove buttons
    document.querySelectorAll(".remove-order-btn").forEach((btn) => {
      btn.addEventListener("click", () => {
        const idx = Number(btn.dataset.index);
        let cart = readCart();
        if (idx >= 0 && idx < cart.length) {
          cart.splice(idx, 1); // remove this line
          writeCart(cart);
          renderCart();        // re-render list & update hidden field
        }
      });
    });

    updateCartCount();
  }

  function setupPaymentToggle() {
    const radios = document.querySelectorAll('input[name="paymentMethod"]');
    const btcBlock = document.getElementById("btcPayment");
    const vippsBlock = document.getElementById("vippsPayment");

    if (!radios.length || !btcBlock || !vippsBlock) return;

    radios.forEach((r) => {
      r.addEventListener("change", () => {
        const method = r.dataset.show;
        if (method === "btc") {
          btcBlock.style.display = "block";
          vippsBlock.style.display = "none";
        } else if (method === "vipps") {
          btcBlock.style.display = "none";
          vippsBlock.style.display = "block";
        }
      });
    });
  }

  renderCart();
  setupPaymentToggle();
</script>

<style>
  :global(body) {
    margin: 0;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      sans-serif;
    background: #0f172a;
    color: #e5e7eb;
    display: flex;
    justify-content: center;
  }

  main {
    max-width: 800px;
    width: 100%;
    padding: 2rem 1.5rem 3rem;
  }

  h1 {
    margin: 0 0 1.5rem;
    font-size: 1.7rem;
  }

  h2 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .card {
    background: #020617;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    display: grid;
    grid-template-columns: minmax(0, 3fr) minmax(0, 2fr);
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .card {
      grid-template-columns: 1fr;
    }
  }

  form {
    display: grid;
    gap: 1rem;
  }

  label {
    display: block;
    font-size: 0.85rem;
    margin-bottom: 0.25rem;
    color: #9ca3af;
  }

  input,
  textarea {
    width: 100%;
    border-radius: 0.6rem;
    border: 1px solid #1f2937;
    padding: 0.65rem 0.8rem;
    background: #020617;
    color: #e5e7eb;
    outline: none;
  }

  input:focus,
  textarea:focus {
    border-color: #38bdf8;
  }

  textarea {
    min-height: 80px;
    resize: vertical;
  }

  .row {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 0.75rem;
  }

  .btn {
    margin-top: 0.75rem;
    width: 100%;
    border-radius: 999px;
    border: none;
    padding: 0.8rem 1rem;
    font-weight: 600;
    letter-spacing: 0.03em;
    cursor: pointer;
    background: linear-gradient(90deg, #22c55e, #0ea5e9);
    color: #0b1120;
  }

  .pay-card {
    border-radius: 1rem;
    border: 1px solid #1f2937;
    padding: 1.5rem;
    background: #020617;
  }

  .qr-wrapper {
    display: flex;
    justify-content: center;
    margin: 1rem 0 0.5rem;
  }

  .btc-address {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
      "Liberation Mono", "Courier New", monospace;
    font-size: 0.75rem;
    padding: 0.6rem 0.8rem;
    border-radius: 0.6rem;
    background: #020617;
    border: 1px solid #1f2937;
    word-break: break-all;
  }

  .small {
    font-size: 0.75rem;
    color: #9ca3af;
  }

  .order-item {
    border-bottom: 1px solid #1f2937;
    padding: 8px 0;
  }

  .order-item-main {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    align-items: center;
  }

  .remove-order-btn {
    border-radius: 999px;
    border: 1px solid #b91c1c;
    background: transparent;
    padding: 6px 12px;
    font-size: 12px;
    color: #fecaca;
    cursor: pointer;
  }

  .remove-order-btn:hover {
    background: rgba(185, 28, 28, 0.3);
  }

  .pay-methods {
    display: flex;
    gap: 12px;
    margin-top: 4px;
  }

  .pay-option {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.9rem;
  }

  .pay-title {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .pay-block {
    margin-top: 0.75rem;
  }
</style>
