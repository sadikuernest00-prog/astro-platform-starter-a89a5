---
const products = [
  {
    name: "Lace Bra & Panty Set",
    price: "$29.99",
    image: "/images/set-white.png",
  },
  {
    name: "Classic Black Lace Set",
    price: "$32.99",
    image: "/images/set-black.png",
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Amicbridge — Women’s Underwear</title>

    <style>
      body {
        margin: 0;
        font-family: system-ui, sans-serif;
        background: #fafafa;
        color: #111;
      }

      header {
        padding: 24px 40px;
        border-bottom: 1px solid #e5e5e5;
      }

      header h1 {
        margin: 0;
        font-size: 18px;
        letter-spacing: 2px;
        text-transform: uppercase;
      }

      .products {
        padding: 40px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 30px;
      }

      .product {
        background: white;
        border: 1px solid #e5e5e5;
        padding: 16px;
      }

      .product img {
        width: 100%;
        height: 360px;
        object-fit: cover;
        background: #f0f0f0;
      }

      .product h3 {
        margin: 12px 0 4px;
        font-size: 16px;
      }

      .product p {
        margin: 0;
        color: #555;
      }

      .product button {
        margin-top: 12px;
        width: 100%;
        padding: 10px;
        border: 1px solid #111;
        background: transparent;
        cursor: pointer;
      }
    </style>
  </head>

  <body>
    <header>
      <h1>Amicbridge</h1>
    </header>

    <section class="products">
      {products.map((product) => (
        <div class="product">
          <img src={product.image} alt={product.name} />
          <h3>{product.name}</h3>
          <p>{product.price}</p>
          <button>Add to cart</button>
        </div>
      ))}
    </section>
  </body>
</html>

