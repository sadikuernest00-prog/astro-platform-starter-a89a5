---
const products = [
  {
    name: "Black Satin-Look Cami & Shorts Set",
    price: "399NOK",
    image: "/images/set-black.png",
  },
  {
    name: "White Satin-Look Cami & Shorts Set",
    price: "399 NOK",
    image: "/images/set-white.png",
  },
  {
    name: "Nude Satin-Look Slip Dress",
    price: "499 NOK",
    image: "/images/nude-slipp-dress.png",
  },
  {
    name: "Black Satin-Look Chemise Dress",
    price: "499 NOK",
    image: "/images/black-chemise.png",
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Amicbridge</title>
    <style>
      body {
        margin: 0;
        font-family: system-ui, sans-serif;
        background: #fafafa;
        color: #111;
      }

      header {
        padding: 24px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      nav a {
        margin-left: 20px;
        text-decoration: none;
        color: #111;
        font-weight: 500;
      }

      .hero {
        padding: 80px 40px;
        max-width: 1200px;
      }

      .hero h1 {
        font-size: 56px;
        margin-bottom: 20px;
      }

      .hero p {
        font-size: 18px;
        color: #555;
        max-width: 520px;
      }

      .products {
        padding: 40px;
        max-width: 1200px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 30px;
      }

      .card {
        background: white;
        border: 1px solid #ddd;
        padding: 16px;
      }

      .card img {
        width: 100%;
        height: 380px;
        object-fit: cover;
        background: #eee;
      }

      .card h3 {
        margin: 14px 0 6px;
        font-size: 18px;
      }

      .price {
        font-weight: bold;
        margin-bottom: 10px;
      }

      .buy {
        display: block;
        text-align: center;
        padding: 12px;
        border: 1px solid #111;
        background: white;
        cursor: pointer;
        text-decoration: none;
        color: #111;
      }

      .buy:hover {
        background: #111;
        color: white;
      }

      footer {
        padding: 40px;
        text-align: center;
        color: #666;
      }
    </style>
  </head>

  <body>
    <header>
      <strong>AMICBRIDGE</strong>
      <nav>
        <a href="#shop">Shop</a>
        <a
          href="https://wa.me/4792928373"
          target="_blank"
        >
          Contact
        </a>
      </nav>
    </header>

    <section class="hero">
      <h1>Underwear designed for real life</h1>
      <p>
        Amicbridge creates thoughtfully made underwear for women who value
        comfort, simplicity, and quiet confidence.
      </p>
    </section>

    <section id="shop" class="products">
      {products.map((product) => (
        <div class="card">
          <img src={product.image} alt={product.name} />
          <h3>{product.name}</h3>
          <div class="price">{product.price}</div>
          <a
            class="buy"
            href="https://wa.me/4792928373?text=Hi%20I%20want%20to%20order%20{encodeURIComponent(product.name)}"
            target="_blank"
          >
            Order on WhatsApp
          </a>
        </div>
      ))}
    </section>

    <footer>
      © {new Date().getFullYear()} Amicbridge · Contact via WhatsApp
    </footer>
  </body>
</html>

