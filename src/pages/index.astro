---
const products = [
  {
    id: 1,
    name: "Lace Bra & Panty Set",
    price: "$29.99",
    image: "/images/set-white.jpg",
  },
  {
    id: 2,
    name: "Classic Black Lace Set",
    price: "$32.99",
    image: "/images/set-black.jpg",
  },
  {
    id: 3,
    name: "Soft Comfort Bralette",
    price: "$24.99",
    image: "/images/bralette.jpg",
  },
];
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Amicbridge — Women’s Underwear</title>

    <style>
      body {
        margin: 0;
        font-family: system-ui, sans-serif;
        background: #fafafa;
        color: #111;
      }

      header {
        padding: 24px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #e5e5e5;
      }

      header h1 {
        margin: 0;
        letter-spacing: 2px;
        font-size: 18px;
        text-transform: uppercase;
      }

      nav a {
        margin-left: 20px;
        text-decoration: none;
        color: #111;
        font-size: 14px;
      }

      .hero {
        padding: 80px 40px;
        max-width: 900px;
      }

      .hero h2 {
        font-size: 42px;
        margin-bottom: 16px;
      }

      .hero p {
        font-size: 18px;
        color: #555;
      }

      .products {
        padding: 40px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 30px;
      }

      .product {
        background: white;
        border: 1px solid #e5e5e5;
        padding: 16px;
      }

      .product img {
        width: 100%;
        height: 360px;
        object-fit: cover;
      }

      .product h3 {
        font-size: 16px;
        margin: 12px 0 4px;
      }

      .product p {
        margin: 0;
        font-size: 14px;
        color: #444;
      }

      .product button {
        margin-top: 12px;
        width: 100%;
        padding: 10px;
        border: 1px solid #111;
        background: transparent;
        cursor: pointer;
        font-size: 14px;
      }

      footer {
        text-align: center;
        padding: 24px;
        font-size: 13px;
        color: #777;
        border-top: 1px solid #e5e5e5;
      }
    </style>
  </head>

  <body>
    <header>
      <h1>Amicbridge</h1>
      <nav>
        <a href="#">Shop</a>
        <a href="#">About</a>
        <a href="#">Contact</a>
      </nav>
    </header>

    <section class="hero">
      <h2>Underwear made for everyday confidence</h2>
      <p>
        Comfortable, elegant women’s underwear designed for real bodies and
        daily wear.
      </p>
    </section>

    <section class="products">
      {products.map((product) => (
        <div class="product">
          <img src={product.image} alt={product.name} />
          <h3>{product.name}</h3>
          <p>{product.price}</p>
          <button>Add to cart</button>
        </div>
      ))}
    </section>

    <footer>
      © {new Date().getFullYear()} Amicbridge. All rights reserved.
    </footer>
  </body>
</html>

